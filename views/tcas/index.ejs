<% layout('layout/boilerplate') %>
    <main class="container mt-5 ml-5 mr-5">
        <h1>all TCAs</h1>
        <div><a href="/tcas/new">New TCA</a></div>

        <div class="card">
            <div>
                <table class="table table-striped table-lg align-middle">
                    <thead>
                        <tr>
                            <th >First Name</th>
                            <th class="mb-3">Last Name</th>
                            <th class="mb-3">Property Address</th>
                            <th class="mb-3">View</th>
                            <th class="mb-3">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let tca of tcas) {%>
                            <tr style="height:60px">
                                <td>
                                    <%= tca.firstName %>
                                </td>
                                <td>
                                    <%= tca.lastName %>
                                </td>
                                <td>
                                    <%= tca.address %>
                                </td>
                                <td><a href="/tcas/<%= tca._id %>" class="index1 btn text-light">View</a></td>
                                <td><a href="/tcas/<%=tca._id%>/edit" class=" index1 btn text-light">Update</a></td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>





    </main>