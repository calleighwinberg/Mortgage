<% layout('layout/boilerplate') %>
    <main class="container mt-5 ml-5 mr-5">
        <%- include('../partials/flash')%>
        <div class="">
            <% if(currentUser) {%>
            <h1>Welcome, <%= currentUser.username %> </h1>
            <% } else { %>
            <% } %>
          </div>

        <div class="card">
            <div>
                <table class="table table-striped table-lg align-middle">
                    <thead>
                        <tr>
                            <th >First Name</th>
                            <th class="mb-3">Last Name</th>
                            <th class="mb-3">Property Address</th>
                            <th class="mb-3">Last Updated</th>
                            <th class="mb-3">View</th>
                            <th class="mb-3">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let tca of tcas) {%>
                            <tr style="height:60px">
                                <td>
                                    <%= tca.firstName %>
                                </td>
                                <td>
                                    <%= tca.lastName %>
                                </td>
                                <td>
                                    <%= tca.address %>
                                </td>
                                <td>
                                    <%= tca.lastModified %>
                                </td>
                                <td><a href="/tcas/<%= tca._id %>" class="index1 btn text-dark">View</a></td>
                                <% if (currentUser && tca.author.equals(currentUser._id)) {%>
                                <td><a href="/tcas/<%=tca._id%>/edit" class=" index1 btn text-dark">Update</a></td>
                                <% } else { %>
                                <td></td>
                                <% } %>

                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>





    </main>