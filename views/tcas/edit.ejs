<% layout('layout/boilerplate') %>
    <h1>Edit TCA</h1>
    <form action="/tcas/<%=tca._id%>?_method=PUT" method="POST"> 
        <div>
            <label for="name">Name</label>
            <input type="text" id="name", name="tca[name]" value="<%=tca.name%>">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description", name="tca[description]" value="<%=tca.description%>">
        </div>
        <button> Save </button>
    </form>
    <a href="/tcas/<%=tca._id%>">Back to Campground</a>