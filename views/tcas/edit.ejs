<% layout('layout/boilerplate') %>
    <div class="row flex-nowrap">
        <%- include('../partials/sidebar')%>

            <div class=" col-xs-12 col-sm-9 p-3">
                <h1>This presentation is for <%=tca.firstName%>
                        <%=tca.lastName%>
                </h1>
                <iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
                <form id="client" action="/tcas/<%=tca._id%>?_method=PUT" method="POST" target="dummyframe">
                    <script>var tcaID = `<%=tca._id%>` </script>
                    <div>
                        <label for="name">First Name</label>
                        <input type="text" id="firstName" , name="tca[firstName]" value="<%=tca.firstName%>">
                    </div>
                    <div>
                        <label for="name">Last Name</label>
                        <input type="text" id="lastName" , name="tca[lastName]" value="<%=tca.lastName%>">
                    </div>
                    <div>
                        <label for="name">Address</label>
                        <input type="text" id="address" , name="tca[address]" value="<%=tca.address%>">
                    </div>
                    <div>
                        <label for="description">Description</label>
                        <input type="text" id="description" , name="tca[description]" value="<%=tca.description%>">
                    </div>
                    <button> Save </button>
                </form>

                <form id="product1" action="/tcas/<%=tca._id%>?_method=PUT" method="POST" target="dummyframe">
                    <div>
                        <label for="name">Product Name</label>
                        <input type="text" id="scenarioName" , name="tca[scenarioone][name]"
                            value="<%=tca.scenarioone.name%>">
                    </div>
                    <div>
                        <label for="name">Price</label>
                        <input type="text" id="scenarioPrice" placeholder="$0.00" name="tca[scenarioone][price]"
                            value="<%=tca.scenarioone.price%>">
                    </div>
                    <div>
                        <label for="name">Down Payment</label>
                        <input type="text" id="scenarioDownPayment" placeholder="$0.000"
                            name="tca[scenarioone][downPayment]" value="<%=tca.scenarioone.downPayment%>">
                    </div>
                    <div>
                        <label for="name">Rate</label>
                        <input type="text" id="scenarioRate" placeholder="0.000%" name="tca[scenarioone][rate]"
                            value="<%=tca.scenarioone.rate%>">
                    </div>
                    <div>
                        <label for="name">Term</label>
                        <input type="text" id="scenarioTerm" placeholder="0" name="tca[scenarioone][term]"
                            value="<%=tca.scenarioone.term%>">
                    </div>
                    <button> Save </button>
                </form>


                <form id="closingCosts1" action="/tcas/<%=tca._id%>?_method=PUT" method="POST" target="dummyframe">
                    <div>
                        <label for="name">APR related closing costs</label>
                        <input type="text" id="scenarioAPRCosts" placeholder="$0.00" name="tca[scenarioone][aprCosts]"
                            value="<%=tca.scenarioone.aprCosts%>">
                    </div>
                    <div>
                        <label for="name">Points</label>
                        <input type="text" id="scenarioPoints" placeholder="0.000%" name="tca[scenarioone][points]"
                            value="<%=tca.scenarioone.points%>">
                    </div>
                    <div>
                        <label for="name">Prepaid Escrows</label>
                        <input type="text" id="scenarioEscrow" placeholder="$0.00" name="tca[scenarioone][escrowFees]"
                            value="<%=tca.scenarioone.escrowFees%>">
                    </div>
                    <div>
                        <label for="name">Non-APR Costs</label>
                        <input type="text" id="scenarioAPR" placeholder="$0.00" name="tca[scenarioone][noAPRcosts]"
                            value="<%=tca.scenarioone.noAPRcosts%>">
                    </div>
                    <div>
                        <label for="name">Contributions</label>
                        <input type="text" id="scenarioContribution" placeholder="$0.00"
                            name="tca[scenarioone][contribution]" value="<%=tca.scenarioone.contribution%>">
                    </div>
                    <button> Save </button>
                </form>

                <form id="monthlyCosts1" action="/tcas/<%=tca._id%>?_method=PUT" method="POST" target="dummyframe">
                    <div>
                        <label for="name">HOA dues</label>
                        <input type="text" id="scenarioHoa" placeholder="$0.00" name="tca[scenarioone][hoa]"
                            value="<%=tca.scenarioone.hoa%>">
                    </div>
                    <div>
                        <label for="name">Hazard Insurance Amount</label>
                        <input type="text" id="scenarioHazIns" placeholder="$0.00" name="tca[scenarioone][hazIns]"
                            value="<%=tca.scenarioone.hazIns%>">
                    </div>
                    <div>
                        <label for="name">Property Tax Amount</label>
                        <input type="text" id="scenarioTaxes" placeholder="0.00%" name="tca[scenarioone][taxes]"
                            value="<%=tca.scenarioone.taxes%>">
                    </div>
                    <div>
                        <label for="name">Mortgage Insurance Amount</label>
                        <input type="text" id="scenarioPMI" placeholder="0.00%" name="tca[scenarioone][pmi]"
                            value="<%=tca.scenarioone.pmi%>">
                    </div>
                    <button> Save </button>
                </form>
            </div>
    </div>


    <%- include('../partials/footer')%>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

        <script src="/javascript/edit.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>

        </body>


        </html>